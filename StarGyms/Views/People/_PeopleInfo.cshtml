@model StarGyms.Models.CustomPeopleModel

<div class="container-fluid">
    <h3>Informaci&oacute; de la Persona</h3>
    <div class="row">
        <div class="form-group col-md-6">
            @Html.DisplayNameFor(m => m.Nombre)
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.ApePaterno)
            @Html.TextBoxFor(m => m.ApePaterno, new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.ApeMaterno)
            @Html.TextBoxFor(m => m.ApeMaterno, new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.IdTipoPersona)
            @Html.DropDownListFor(m => m.IdTipoPersona, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(8), "Id", "Descripcion", Model.IdPersona), "[Seleccionar]", new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.IdGenero)
            @Html.DropDownListFor(m => m.IdGenero, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(4), "Id", "Descripcion", Model.IdGenero), "[Seleccionar]", new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.IdConocio)
            @Html.DropDownListFor(m => m.IdConocio, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(1), "Id", "Descripcion", Model.IdConocio), "[Seleccionar]", new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.IdObjetivo)
            @Html.DropDownListFor(m => m.IdObjetivo, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(5), "Id", "Descripcion", Model.IdObjetivo), "[Seleccionar]", new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.Telefono)
            @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.FechaAlta)
            @Html.TextBoxFor(m => m.FechaAlta, new { @class = "form-control", @type = "date", disabled = "disabled" })
        </div>
    </div>
    <h3>Informaci&oacute; Extra</h3>
    <div class="row">
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.RFC)
            @Html.TextBoxFor(m => m.RFC, new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.FechaNac)
            @Html.TextBoxFor(m => m.FechaNac, new { @class = "form-control", @type = "date" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.IdSucursal)
            @Html.DropDownListFor(m => m.IdSucursal, new SelectList(StarGyms.Models.CatalogModel.Sucursales(), "IdSucursal", "Nombre", Model.IdSucursal), "[Seleccionar]", new { @class = "form-control" })
        </div>
        <div class="form-group col-sm-6 col-md-3">
            @Html.DisplayNameFor(m => m.Multiclub)
            @Html.DropDownListFor(m => m.Multiclub, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(5), "Id", "Descripcion", Model.IdObjetivo), "[Seleccionar]", new { @class = "form-control" })
        </div>
    </div>
</div>