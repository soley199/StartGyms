@model StarGyms.Models.PeopleModel
<div class="col-xs-12">
    @using (Html.BeginForm("Save", "People", FormMethod.Post, new { }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Horizontal Form -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Alta de Persona</h3>
            </div>
            <div class="box-body">
                @Html.HiddenFor(m => m.Persona.IdPersona)
                <div class="form-group col-sm-6">
                    @Html.DisplayNameFor(m => m.Persona.Nombre)
                    @Html.TextBoxFor(m => m.Persona.Nombre, new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.ApePaterno)
                    @Html.TextBoxFor(m => m.Persona.ApePaterno, new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.ApeMaterno)
                    @Html.TextBoxFor(m => m.Persona.ApeMaterno, new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.IdTipoPersona)
                    @Html.DropDownListFor(m => m.Persona.IdTipoPersona, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(8), "Id", "Descripcion"), "[Seleccionar]", new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.IdGenero)
                    @Html.DropDownListFor(m => m.Persona.IdGenero, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(4), "Id", "Descripcion"), "[Seleccionar]", new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.IdConocio)
                    @Html.DropDownListFor(m => m.Persona.IdConocio, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(1), "Id", "Descripcion"), "[Seleccionar]", new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.IdObjetivo)
                    @Html.DropDownListFor(m => m.Persona.IdObjetivo, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(5), "Id", "Descripcion"), "[Seleccionar]", new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.Telefono)
                    @Html.TextBoxFor(m => m.Persona.Telefono, new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.Email)
                    @Html.TextBoxFor(m => m.Persona.Email, new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.FechaAlta)
                    @Html.TextBoxFor(m => m.Persona.FechaAlta, new { @class = "form-control", @type = "date", disabled = "disabled" })
                </div>
            </div>
            <div class="box-footer">
                <button class="btn btn-primary pull-right" type="submit"><i class="fa fa-save"></i> Guardar</button>
            </div>
        </div>

        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Informaci&oacute;n Extra</h3>
            </div>
            <div class="box-body">
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.RFC)
                    @Html.TextBoxFor(m => m.Persona.RFC, new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.FechaNac)
                    @Html.TextBoxFor(m => m.Persona.FechaNac, new { @class = "form-control", @type = "date" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.IdSucursal)
                    @Html.DropDownListFor(m => m.Persona.IdSucursal, new SelectList(StarGyms.Models.CatalogModel.Sucursales(), "IdSucursal", "Nombre", Model.Persona.IdSucursal), "[Seleccionar]", new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.Multiclub)
                    @Html.DropDownListFor(m => m.Persona.Multiclub, new SelectList(StarGyms.Models.CatalogModel.CatGeneral(5), "Id", "Descripcion", Model.Persona.Multiclub), "[Seleccionar]", new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="box box-info">
            <div class="box-header with-border">
                <h3 class="box-title">Datos de Domicilio</h3>
            </div>
            <div class="box-body">
                <div class="form-group col-sm-3">
                    @Html.DisplayNameFor(m => m.Persona.RFC)
                    @Html.TextBoxFor(m => m.Persona.RFC, new { @class = "form-control" })
                </div>
            </div>
        </div>
    }
</div>
